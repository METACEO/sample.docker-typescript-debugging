{
  "name": "sample.docker-typescript-debugging",
  "version": "1.0.0",
  "description": "A sample of hot-reloading, debuggable code in a development environment.",
  "scripts": {
    "dev": "nodemon --legacy-watch --inspect=0.0.0.0:9229",
    "docker:down": "docker-compose down",
    "docker:exec": "docker-compose exec sample-docker-typescript-debugging sh",
    "docker:up": "docker-compose up -d",
    "docker:up-build": "docker-compose up -d --build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/METACEO/sample.docker-typescript-debugging.git"
  },

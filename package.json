  "license": "MIT",
  "bugs": {
    "url": "https://github.com/METACEO/sample.docker-typescript-debugging/issues"
  },
  "homepage": "https://github.com/METACEO/sample.docker-typescript-debugging#readme",
  "dependencies": {
    "express": "^4.16.2",
    "lodash": "^4.17.5",
    "pug": "^2.0.0-rc.4"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/lodash": "^4.14.104",
    "@types/node": "^9.4.6",
    "@types/pug": "^2.0.4",
    "nodemon": "^1.15.1",
    "ts-node": "~4.1.0",
    "typescript": "^2.7.2"
